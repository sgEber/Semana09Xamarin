<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana09Xamarin.MainPage">

    <StackLayout>
        <!-- Espaciado alrededor del menú -->
        <StackLayout Padding="10">
            <!-- Título del menú -->
            <Label Text="Menú Principal" FontSize="Large" HorizontalOptions="Center"/>

            <!-- Botones del menú -->
            <Button Text="Demo de Pulsación" Clicked="OnTapDemoClicked"/>
            <Button Text="Demo de Deslizamiento" Clicked="OnSwipeDemoClicked"/>
            <Button Text="Demo de Pellizco" Clicked="OnPinchDemoClicked"/>
            <Button Text="Demo de Paneo" Clicked="OnPanDemoClicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
